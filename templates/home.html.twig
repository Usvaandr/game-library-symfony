{%  extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <h1>Games Library</h1>
        </div>
        <div class="row">
            <h3>Publishers List</h3>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Publisher's Name</th>
                        <th scope="col">Net Worth</th>
                        <th scope="col">Country</th>
                        <th scope="col">Year Founded</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% set idVal = 0 %}

                    {% for publisher in publishers %}
                    <tr>
                        {% set idVal = idVal + 1 %}
                        <th scope="row">{{ idVal }}
                        </th>
                        <td>{{ publisher.name }}</td>
                        <td>{{ publisher.value }}</td>
                        <td>{{ publisher.country }}</td>
                        <td>{{ publisher.year }}</td>
                        <td>
                            <a href="{{ path('app_viewPublisher') }}" title="View Games" data-toggle="tooltip">
                                <button class="btn btn-success">View</button>
                            </a>
                            <a href="{{ path('app_editPublisher', { 'id':publisher.id }) }}" title="View Games" data-toggle="tooltip">
                                <button class="btn btn-warning">Edit</button>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <a href="{{ path("app_createPublisher") }}" title="Add New Publisher" data-toggle="tooltip">
                <button class="btn btn-success">Add New Publisher</button>
            </a>
        </div>
    </div>

{% endblock %}
